<Application x:Class="WpfAppUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:WpfAppUI.ViewModels"
             xmlns:views="clr-namespace:WpfAppUI.Views"
             xmlns:local="clr-namespace:WpfAppUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:ProductsViewModel}">
                <views:ProductView/>
            </DataTemplate>
        </ResourceDictionary>

    </Application.Resources>
</Application>
